{
    "defaultSeverity": "error",
    "rules": {
        "no-unsafe-any": false,
        "no-invalid-template-strings": false,
        "object-literal-shorthand": false,
        "strict-comparisons": false,
        "no-var-keyword": false,
        "no-this-assignment": false,
        "restrict-plus-operands": false,
        "no-use-before-declare": false,
        "strict-type-predicates": false,
        "no-for-in": false,
        "invalid-void": false,
        "strict-string-expressions": true,
        "no-promise-as-boolean": true,
        "no-non-null-assertion": true,
        "unnecessary-else": true,
        "no-async-without-await": true,
        "no-restricted-globals": [true, "name", "length", "event", "parent"],
        "no-tautology-expression": true,
        "static-this": true,
        "no-null-undefined-union": true,
        "unnecessary-constructor": true,
        "ban-ts-ignore": true,
        "function-constructor": true,
        "unnecessary-bind": true,
        "max-line-length": [true, {
            "limit": 199,
            "ignore-pattern": "class [a-zA-Z]+ implements |^[\\s\\t]*//|^[\\s\\t]*{|^[\\s\\t]*\"|^[\\s\\t]*<|^[\\s\\t]*\\*"
        }],
        "prefer-readonly": true,
        "ban-comma-operator": true,
        "interface-over-type-literal": true,
        "callable-types": true,
        "no-irregular-whitespace": true,
        "use-default-type-parameter": true,
        "prefer-object-spread": true,
        "no-unnecessary-class": true,
        "space-within-parens": true,
        "no-duplicate-switch-case": true,
        "no-inferred-empty-object-type": true,
        "no-inferrable-types": true,
        "prefer-while": true,
        "no-unnecessary-type-assertion": true,
        "no-boolean-literal-compare": true,
        "return-undefined": true,
        "no-for-in-array": true,
        "adjacent-overload-signatures": true,
        "no-namespace": true,
        "no-misused-new": true,
        "no-parameter-reassignment": true,
        "no-conditional-assignment": true,
        "arrow-return-shorthand": true,
        "no-consecutive-blank-lines": [true, 2],
        "no-return-await": true,
        "no-redundant-jsdoc": true,
        "no-floating-promises": true,
        "no-unnecessary-callback-wrapper": true,
        "await-promise": [true, "IDeferredPromise"],
        "type-literal-delimiter": true,
        "unified-signatures": true,
        "class-name": true,
        "indent": [true, "spaces"],
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-arg": true,
        "curly": true,
        "no-internal-module": true,
        "no-trailing-whitespace": true,
        "no-shadowed-variable": true,
        "no-debugger": true,
        "no-construct": true,
        "no-duplicate-super": true,
        "switch-default": true,
        "use-isnan": true,
        "no-sparse-arrays": true,
        "no-unsafe-finally": true,
        "max-classes-per-file": [true, 9],
        "cyclomatic-complexity": [true, 23],
        "one-line": [true, "check-open-brace", "check-whitespace"],
        "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
        "quotemark": [true, "double"],
        "semicolon": [true, "always"],
        "array-type": [true, "array"],
        "no-string-throw": true,
        "interface-name": [true, "always-prefix"],
        "triple-equals": true,
        "typedef-whitespace": [true, {
            "call-signature": "nospace",
            "index-signature": "nospace",
            "parameter": "nospace",
            "property-declaration": "nospace",
            "variable-declaration": "nospace"
        }],
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
        "whitespace": [true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-type-operator",
            "check-preblock",
            "check-module"
        ],
        "member-ordering": [true, {
                "order": [
                    "private-instance-field",
                    "private-static-field",
                    "private-instance-method",
                    "private-constructor",
                    "protected-instance-method",
                    "public-constructor",
                    "public-static-field",
                    "public-instance-field",
                    "public-instance-method"
                ]
            }
        ],
        "ban": [
            true, 
            {
                "name": ["require"],
                "message": "Don't use require method, because it's used by commonjs module resolution on server"
            }
        ]
    }
}